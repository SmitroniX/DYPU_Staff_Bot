        <style>
            :root {
                --accent-color: <%= settings.accentColor %>;
                --accent-color-rgb: <%= accentColorRgb %>;
            }
            
            
            body {
                background: radial-gradient(circle at top left, rgba(var(--accent-color-rgb), 0.2) 0%, rgba(var(--accent-color-rgb), 0.15) 50%, rgba(var(--accent-color-rgb), 0.1) 100%), #0f0f13;
                min-height: 100vh;
                font-family: 'Inter', sans-serif;
                margin: 0;
                padding: 0;
                display: flex;
                flex-direction: column;
            }
            
            .section {
                flex: 1;
                padding: 1rem;
                margin: 0;
            }
            
            
            .glass-card {
                background: #1a1a2e;
                backdrop-filter: blur(10px);
                border: 1px solid rgba(var(--accent-color-rgb), 0.1);
                border-radius: 16px;
                padding: 1.5rem;
                transition: all 0.3s ease;
                margin-bottom: 1.5rem;
            }
            
            .section-title {
                font-size: 1.25rem;
                font-weight: 600;
                color: #ffffff;
                margin-bottom: 1rem;
                display: flex;
                align-items: center;
                gap: 0.75rem;
            }
            
            .section-title i {
                color: var(--accent-color);
            }
            
            .section-description {
                color: rgba(255, 255, 255, 0.7);
                margin-bottom: 1.5rem;
            }
            
            
            .alert {
                padding: 0.75rem 1.25rem;
                border-radius: 8px;
                margin-bottom: 1rem;
                display: flex;
                align-items: center;
                gap: 0.75rem;
            }
            
            .alert.is-success {
                background: rgba(72, 199, 116, 0.1);
                border: 1px solid rgba(72, 199, 116, 0.2);
                color: #48c774;
            }
            
            .alert.is-danger {
                background: rgba(241, 70, 104, 0.1);
                border: 1px solid rgba(241, 70, 104, 0.2);
                color: #f14668;
            }
            
            .alert i {
                font-size: 1.1rem;
            }
            
            
            .settings-grid {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
                gap: 1.25rem;
                margin-top: 1.5rem;
            }
            
            
            .settings-card {
                background: rgba(255, 255, 255, 0.02);
                border: 1px solid rgba(var(--accent-color-rgb), 0.1);
                border-radius: 12px;
                padding: 1.5rem;
                transition: all 0.3s ease !important;
                display: flex;
                flex-direction: column;
                height: 100%;
                cursor: pointer;
            }
            
            .settings-card:hover {
                background: rgba(255, 255, 255, 0.04);
                transform: translateY(-5px);
                border-color: rgba(var(--accent-color-rgb), 0.3);
                box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
            }
            
            .settings-card-header {
                display: flex;
                align-items: center;
                gap: 1rem;
                margin-bottom: 1rem;
                padding-bottom: 1rem;
                border-bottom: 1px solid rgba(var(--accent-color-rgb), 0.1);
            }
            
            .settings-card-icon {
                width: 50px;
                height: 50px;
                background: rgba(var(--accent-color-rgb), 0.1);
                border-radius: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 1.5rem;
                color: var(--accent-color);
                flex-shrink: 0;
                transition: all 0.3s ease;
            }
            
            .settings-card:hover .settings-card-icon {
                background: rgba(var(--accent-color-rgb), 0.2);
                transform: scale(1.05);
            }
            
            .settings-card-title {
                font-size: 1.1rem;
                font-weight: 600;
                color: #ffffff;
            }
            
            .settings-card-description {
                color: rgba(255, 255, 255, 0.7);
                flex-grow: 1;
                margin-bottom: 1.25rem;
                line-height: 1.6;
            }
            
            .settings-card-features {
                margin-bottom: 1.25rem;
            }
            
            .feature-item {
                display: flex;
                align-items: center;
                gap: 0.5rem;
                color: rgba(255, 255, 255, 0.6);
                margin-bottom: 0.5rem;
                font-size: 0.9rem;
            }
            
            .feature-item i {
                color: var(--accent-color);
                font-size: 0.8rem;
            }
            
            .info-notice {
    display: flex;
    align-items: center; 
    gap: 1rem;
    background: rgba(var(--accent-color-rgb), 0.08);
    border: 1px solid rgba(var(--accent-color-rgb), 0.2);
    border-radius: 10px;
    padding: 1rem;
    margin-bottom: 1.5rem;
}

.info-notice-icon {
    color: var(--accent-color);
    font-size: 1.2rem;
    flex-shrink: 0;
    display: flex; 
    align-items: center; 
    justify-content: center; 
}

.info-notice-content p {
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.5;
}

            .configure-button {
                padding: 0.5rem 1rem;
                border-radius: 8px;
                font-size: 0.9rem;
                font-weight: 500;
                border: none;
                cursor: pointer;
                transition: all 0.3s ease;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 0.5rem;
                background: rgba(var(--accent-color-rgb), 0.15);
                color: var(--accent-color);
                margin-top: auto;
                width: 100%;
            }
            
            .configure-button:hover {
                background: rgba(var(--accent-color-rgb), 0.25);
                transform: translateY(-2px);
                color: var(--accent-color);
            }
            
            
            @keyframes fadeIn {
                from { opacity: 0; transform: translateY(-10px); }
                to { opacity: 1; transform: translateY(0); }
            }
            
            .settings-card {
                opacity: 0;
                animation: fadeIn 0.3s ease forwards;
            }
            
            .settings-card:nth-child(1) { animation-delay: 0.1s; }
            .settings-card:nth-child(2) { animation-delay: 0.2s; }
            .settings-card:nth-child(3) { animation-delay: 0.3s; }
            .settings-card:nth-child(4) { animation-delay: 0.4s; }
            .settings-card:nth-child(5) { animation-delay: 0.5s; }
            .settings-card:nth-child(6) { animation-delay: 0.6s; }
            .settings-card:nth-child(7) { animation-delay: 0.7s; }
            .settings-card:nth-child(8) { animation-delay: 0.8s; }
            .settings-card:nth-child(9) { animation-delay: 0.9s; }
            .settings-card:nth-child(10) { animation-delay: 1.0s; }
            
            
            @media screen and (max-width: 768px) {
                .settings-grid {
                    grid-template-columns: 1fr;
                }
                
                .settings-card-header {
                    flex-direction: column;
                    align-items: center;
                    text-align: center;
                    gap: 0.75rem;
                }
                
                .settings-card-title {
                    text-align: center;
                    width: 100%;
                }
                
                .settings-card-description {
                    text-align: center;
                }
                
                .settings-card-features {
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                }
            }
        </style>
    </head>
