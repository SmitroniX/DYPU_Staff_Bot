        <script>
document.addEventListener('DOMContentLoaded', function() {

    const cards = document.querySelectorAll('.settings-card');
    

    cards.forEach(card => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        card.style.transition = 'opacity 0.5s ease-out, transform 0.5s ease-out';
    });
    

    setTimeout(() => {
        cards.forEach((card, index) => {
            setTimeout(() => {
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 80 * index); // Slightly faster timing between cards (80ms instead of 100ms)
        });
    }, 150); // Small initial delay for better perception
    

    cards.forEach(card => {
        card.addEventListener('mouseenter', function() {

            const icon = this.querySelector('.settings-card-icon i');
            if (icon) {
                icon.style.transform = 'scale(1.2)';
                icon.style.transition = 'transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275)'; // Bouncy effect
            }
            

            this.style.boxShadow = `0 10px 25px -5px rgba(0, 0, 0, 0.2), 0 0 10px rgba(var(--accent-color-rgb), 0.2)`;
        });
        
        card.addEventListener('mouseleave', function() {
            const icon = this.querySelector('.settings-card-icon i');
            if (icon) {
                icon.style.transform = 'scale(1)';
                icon.style.transition = 'transform 0.3s ease-out';
            }
            

            this.style.boxShadow = '';
        });
    });
});
